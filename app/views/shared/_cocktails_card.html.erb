<% @cocktails.each do |cocktail| %>
  <div class="card">
    <%= cl_image_tag cocktail.photo.key, :width=>500, :height=>300, :radius=>5, :crop=>"fill"%>
	  <div class="card-text">
	    <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
	    <%= link_to cocktail_path(cocktail), data: { confirm: "Are you sure? Someone might like that cocktail..." }, method: :delete do %>
	      <p>DELETE</p>
	    <% end %>
	  </div>
  </div>
<% end %>
